<Window x:Class="Interface1.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres" Height="400" Width="450">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Paramètres :" FontSize="20" FontWeight="Bold" TextDecorations="Underline" Margin="0,0,0,10"/>

            <GroupBox>
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Format du fichier log :" Width="180" VerticalAlignment="Center"/>
                        <ComboBox Width="150">
                            <ComboBoxItem Content="JSON" IsSelected="True"/>
                            <ComboBoxItem Content="XML"/>
                            <ComboBoxItem Content="TXT"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Extensions à chiffrer :" Width="180" VerticalAlignment="Center"/>
                        <ComboBox Width="150">
                            <ComboBoxItem Content="xls" IsSelected="True"/>
                            <ComboBoxItem Content="docx"/>
                            <ComboBoxItem Content="zip"/>
                        </ComboBox>
                        <Button Content="Ajouter" Margin="10,0,0,0" Width="52"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Logiciel métier (.exe) :" Width="180" VerticalAlignment="Center"/>
                        <TextBox Width="150"/>
                        <Button Content="Parcourir" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Langues :" Width="180" VerticalAlignment="Center"/>
                        <ComboBox Width="150">
                            <ComboBoxItem Content="Anglais" IsSelected="True"/>
                            <ComboBoxItem Content="Français"/>
                            <ComboBoxItem Content="Tamazight"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Valider" Width="100" Margin="5"/>
                <Button Content="Annuler" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>