<Window x:Class="Interface1.Window1"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter/Modifier une sauvegarde" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ajouter/Modifier une sauvegarde" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <GroupBox>
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Nom" Width="120" VerticalAlignment="Center"/>
                        <TextBox Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Source" Width="120" VerticalAlignment="Center"/>
                        <TextBox Width="200"/>
                        <Button Content="Parcourir" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Target" Width="120" VerticalAlignment="Center"/>
                        <TextBox Width="200"/>
                        <Button Content="Parcourir" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Type" Width="120" VerticalAlignment="Center"/>
                        <ComboBox Width="200">
                            <ComboBoxItem Content="Full" IsSelected="True"/>
                            <ComboBoxItem Content="Differential"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Description" Width="120" VerticalAlignment="Center"/>
                        <TextBox Width="200"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Enregistrer" Width="100" Margin="5"/>
                <Button Content="Annuler" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
