<Window x:Class="EasySave.ConsoleRemote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Déportée" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nom du scénario :" Margin="0,0,0,5"/>
            <TextBox x:Name="ScenarioTextBox" Height="30" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Pause" Width="100" Margin="5" Click="Pause_Click"/>
                <Button Content="Reprendre" Width="100" Margin="5" Click="Resume_Click"/>
                <Button Content="Stop" Width="100" Margin="5" Click="Stop_Click"/>
            </StackPanel>

            <TextBlock x:Name="ResponseTextBlock" Text="Réponse :" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
