<Window x:Class="BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sauvegarde(s)" Height="604" Width="1096" Background="Gray">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Sauvegarde(s):" FontSize="36" FontWeight="Bold" Margin="10"/>

        <!-- Tableau -->
        <DataGrid Grid.Row="1" x:Name="BackupDataGrid" AutoGenerateColumns="False" Margin="0,10,0,10" HeadersVisibility="Column" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*"/>
                <DataGridTextColumn Header="BackupType" Binding="{Binding BackupType}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Etat" Binding="{Binding Etat}" Width="*"/>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="80"/>
                <DataGridTemplateColumn Header="Modifier / Supprimer" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Margin="5" ToolTip="Modifier">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18"/>
                                </Button>
                                <Button Margin="5" ToolTip="Supprimer">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons bas -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Width="60" Height="60" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="28" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <TextBlock Text="Play" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Width="40" Height="40" Margin="5">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" HorizontalAlignment="Center"/>
                </Button>
                <TextBlock Text="Ajouter" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Width="40" Height="40" Margin="5">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" HorizontalAlignment="Center"/>
                </Button>
                <TextBlock Text="Paramètre" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <Button Content="CMD" HorizontalAlignment="Left" Height="39" Margin="977,0,0,0" VerticalAlignment="Center" Width="60" AutomationProperties.HelpText="Passer en invite de commande"/>
    </Grid>
</Window>
