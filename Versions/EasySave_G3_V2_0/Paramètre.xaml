<Window x:Class="ParametresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres" Height="350" Width="500"
        Background="LightGray" FontWeight="Bold" FontSize="14">

    <StackPanel Margin="10">

        <!-- Titre -->
        <TextBlock Text="Paramètres :" FontSize="18" TextDecorations="Underline" Margin="0,0,0,10"/>

        <!-- Section principale encadrée -->
        <Border BorderBrush="Black" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>

                <!-- Format log -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Format du fichier log : " VerticalAlignment="Center"/>
                    <ComboBox Width="100">
                        <ComboBoxItem Content="JSON" IsSelected="True"/>
                        <ComboBoxItem Content="XML"/>
                        <ComboBoxItem Content="TXT"/>
                    </ComboBox>
                </StackPanel>

                <!-- Extensions à chiffrer -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Extensions à chiffrer : " VerticalAlignment="Center"/>
                    <TextBlock Text="[.zip,.docx,.xls]" Foreground="Black" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Logiciel métier -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Logiciel métier (.exe) : " VerticalAlignment="Center"/>
                    <CheckBox VerticalAlignment="Center" Margin="5,0"/>
                    <Button Content="Parcourir" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Langues -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Langues : " VerticalAlignment="Center"/>
                    <ComboBox Width="120">
                        <ComboBoxItem Content="Anglais" IsSelected="True"/>
                        <ComboBoxItem Content="Français"/>
                        <ComboBoxItem Content="Allemand"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Boutons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Valider" Width="100" Margin="10,0"/>
            <Button Content="Annuler" Width="100" Margin="10,0"/>
        </StackPanel>

    </StackPanel>
</Window>